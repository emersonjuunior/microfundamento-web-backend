@model IEnumerable<microfundamento_web_backend.Models.Veiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Veículos</h1>

<p>
    <a asp-action="Create">Adicionar novo Veículo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnoModelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoFabricacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoModelo)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Editar" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-info" asp-action="Visualizar" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger" asp-action="Apagar" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
